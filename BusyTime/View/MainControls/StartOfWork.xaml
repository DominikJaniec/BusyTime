<UserControl x:Class="BusyTime.View.MainControls.StartOfWork"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{StaticResource MainVM}"
             d:DesignHeight="100"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center"
                Orientation="Vertical">

        <WrapPanel HorizontalAlignment="Center"
                   Orientation="Horizontal">
            <Label Content="Zacząłem(am) pracowity dzień o godzinie:" />
            <Label Content="{Binding WorkStart, Converter={StaticResource DateTimeCon}}" />
        </WrapPanel>

        <Slider LargeChange="2"
                Maximum="23"
                Minimum="0"
                SmallChange="1"
                TickPlacement="BottomRight"
                Value="{Binding WorkStartHours}" />

        <Slider LargeChange="5"
                Maximum="59"
                Minimum="0"
                SmallChange="1"
                Value="{Binding WorkStartMinutes}" />
    </StackPanel>
</UserControl>
